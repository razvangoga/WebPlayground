@section scripts
{
    <script type="text/javascript">
        $(document).ready(function () {
            $('#postLink').click(function () {

                $.get('/Home/Get', function (data, status, state) {
                    console.log(data);
                    print(data);

                    $.post('/Home/Post', data, function (d, s, st) {
                        console.log(d.viewModel);
                        print(d.viewModel);

                        $.post('/Home/Post', d.viewModel, function (d1, s1, st1) {
                            console.log(d1.viewModel);
                            print(d1.viewModel);
                        });
                    });
                });
            });
        });

        function print(d) {
            var d1 = new Date(d.D1);
            var d2 = new Date(d.D2);

            console.log(d1.toUTCString());
            console.log(d2);
        }
    </script>
}
